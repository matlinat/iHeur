 SELECT 
    r.id,
    r.rest_name,
    r.rest_header_image,
    r.rest_description,
    r.rest_rating_avg,
    r.rest_rating_amount,
    r.rest_website,
    r.rest_public_email,
    r.rest_facebook,
    r.rest_instagram,
    r.rest_tiktok,
    r.rest_logo,
    r.claimed,
    r.rest_menu,
    r.region,
    a.owner_id,
    a.postcode,
    a.city,
    a.street,
    a.housenumber,
    a.long,
    a.lat,
    a.country,
    a.country_code,
    a.location,
    rf.restaurant_id,
    rf.top_heuriger,
    rf.vegan,
    rf.vegetarian,
    rf.playground,
    rf.abhof_sales,
    rf.parking,
    rf.seats_int,
    rf.seats_ext,
    rf.outdoor,
    rf.view,
    rf.own_production,
    rf.own_wine,
    rf.children_welcome,
    rf.bikers_welcome,
    rf.charge_ebike,
    rf.charge_ebike_text,
    rf.charge_car,
    rf.charge_car_text,
    rf.hot_meals,
    rf.own_desserts,
    rf.wine_demeter,
    rf.wine_organic,
    rf.free_wifi,
    rf.guest_rooms,
    rf.guest_rooms_text,
    rf.pay_cash,
    rf.pay_card,
    rf.guest_rooms_url,
    rf.accessible,
    rf.organic,
    rf.guest_rooms_img_1,
    rf.guest_rooms_img_2,
    rf.guest_rooms_img_3,
    rg.region_name,
    rg.region_logo,
    rg.region_description,
    rg.region_img,
    json_build_object('latitude', a.lat, 'longitude', a.long) AS r_latlong
   FROM (((restaurant r
     LEFT JOIN restaurant_features rf ON ((r.id = rf.restaurant_id)))
     LEFT JOIN address a ON ((r.id = a.owner_id)))
     JOIN region rg ON ((r.region = rg.id)));
